{
  "name": "memos-cloudflare",
  "version": "1.0.0",
  "description": "A memos clone deployable on Cloudflare Workers with D1 database",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create memos",
    "db:push": "wrangler d1 execute memos --local --file=schema.sql",
    "db:push:remote": "wrangler d1 execute memos --remote --file=schema.sql"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "wrangler": "^3.33.0"
  }
}
